{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "adminUsername": {
      "type": "string"
    },
    "imageOffer": {
      "type": "string"
    },
    "imagePublisher": {
      "type": "string"
    },
    "imageSku": {
      "type": "string"
    },
    "imageVersion": {
      "type": "string"
    },
    "wanNetworkInterfaceName": {
      "type": "string"
    },
    "lanNetworkInterfaceName": {
      "type": "string"
    },
    "sshKey": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "osDiskVhdUri": {
      "type": "string"
    }
  },
  "variables": {
    "apiVersion": "2016-04-30-preview"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "name": "[parameters('virtualMachineName')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('wanNetworkInterfaceName'))]",
              "properties": {
                "primary": true
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('lanNetworkInterfaceName'))]",
              "properties": {
                "primary": false
              }
            }
          ]
        },
        "osProfile": {
            "adminPassword": "[parameters('adminPassword')]",
            "adminUsername": "[parameters('adminUsername')]",
            "computerName": "[parameters('virtualMachineName')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "Attach",
            "name": "[concat(replace(parameters('virtualMachineName'),'-',''), 'osdisk')]",
            "osType": "Linux",
            "image": {
              "uri": "[parameters('osDiskVhdUri')]"
            },
            "vhd": {
              "uri": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net/system/Microsoft.Compute/Images/images/', parameters('virtualMachineName'), '.vhd')]"
            }
          }
        }
      },
      "type": "Microsoft.Compute/virtualMachines"
    }
  ]
}
