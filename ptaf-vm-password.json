{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "adminUsername": {
      "type": "string"
    },
    "imageOffer": {
      "type": "string"
    },
    "imagePublisher": {
      "type": "string"
    },
    "imageSku": {
      "type": "string"
    },
    "imageVersion": {
      "type": "string"
    },
    "wanNetworkInterfaceName": {
      "type": "string"
    },
    "lanNetworkInterfaceName": {
      "type": "string"
    },
    "sshKey": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "osDiskVhdUri": {
      "type": "string"
    }
  },
  "variables": {
    "apiVersion": "2015-06-15"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "name": "[parameters('virtualMachineName')]",
      "plan": {
        "name": "[parameters('imageSku')]",
        "product": "[parameters('imageOffer')]",
        "publisher": "[parameters('imagePublisher')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('wanNetworkInterfaceName'))]",
              "properties": {
                "primary": true
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('lanNetworkInterfaceName'))]",
              "properties": {
                "primary": false
              }
            }
          ]
        },
        "osProfile": {
          "adminPassword": "[parameters('adminPassword')]",
          "adminUsername": "[parameters('adminUsername')]"
        },
        "storageProfile": {
          "imageReference": {
            "offer": "[parameters('imageOffer')]",
            "publisher": "[parameters('imagePublisher')]",
            "sku": "[parameters('imageSku')]",
            "version": "[parameters('imageVersion')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "name": "testdisk2",
            "vhd": {
              "uri": "https://vhdtestgroup.blob.core.windows.net/system/packer-osDisk.9226c11f-3bda-4111-ab0e-2719d5546a9a.vhd"
            }

          }
        }
      },
      "type": "Microsoft.Compute/virtualMachines"
    }
  ]
}
